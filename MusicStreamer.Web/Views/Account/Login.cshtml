@model MusicStreamer.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">  MusicStreamer - Login</h2>

                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Senha</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-controller="Account" asp-action="Register">Não tem uma conta? Cadastre-se</a>
                </div>
            </div>
        </div>
    </div>
</div>
