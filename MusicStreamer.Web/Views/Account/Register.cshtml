@model MusicStreamer.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4"> MusicStreamer - Cadastro</h2>

                <form asp-action="Register" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label">Nome</label>
                        <input asp-for="FirstName" class="form-control" placeholder="João" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label">Sobrenome</label>
                        <input asp-for="LastName" class="form-control" placeholder="Silva" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="joao@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Senha</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Criar conta</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-controller="Account" asp-action="Login">Já possui uma conta? Entrar</a>
                </div>
            </div>
        </div>
    </div>
</div>
